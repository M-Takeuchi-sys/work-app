.wrap
  = render 'commons/profile_image', user: current_user
  .main
    .container
      - if current_user.department == 'management'
        .pageTitleBtn
          = link_to managements_path do
            %h2 経営陣
          .create
            = link_to new_management_path do
              .create_button
                %p ＋新規ボード作成
      - else
        .pageTitle
          = link_to managements_path do
            %h2 経営陣
      - @managements.each do |management|
        .card
          .card_wrap
            = render 'commons/contact', contact: management
            .card_display
              = link_to management_path(management) do
                .card_display_button
                  %p 詳細を表示
