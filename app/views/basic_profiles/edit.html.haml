.container
  %ul
    - @basic_profile.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @basic_profile, url: basic_profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :name, '氏名'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :birthday, '生年月日'
    %div
      = f.date_field :birthday, class: 'text'
    %div
      = f.label :gender, '性別'
    %div
      = f.select :gender, BasicProfile.genders.map { |k, v| [ I18n.t("enum.genders.#{k}"), k ] }, {}, { class: 'text' }
    %div
      = f.label :department, '所属'
    %div
      = f.select :department, BasicProfile.departments.map { |k, v| [ I18n.t("enum.departments.#{k}"), k ] }, {}, { class: 'text' }

    = f.submit '保存', class: 'btn-primary'
