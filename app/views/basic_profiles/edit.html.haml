.container
  %ul
    - @basic_profile.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @basic_profile, url: basic_profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :name, '氏名'
    %div
      = f.text_field :nickname, class: 'text'
    %div
      = f.label :birthday, '生年月日'
    %div
      = f.date_field :birthday, class: 'text'
    %div
      = f.label :gender, '性別'
    %div
      = f.select :gender, BasicProfile.genders.keys, {}, { class: 'text' }
    %div
      = f.label :department, '所属'
    %div
      = f.select :gender, BasicProfile.departments.keys, {}, { class: 'text' }

    = f.submit '保存', class: 'btn-primary'
