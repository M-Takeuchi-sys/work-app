.container.profilePage
  .profilePage_user
    .profilePage_user_icon
      .profilePage_user_icon_background
        = image_tag 'Rectangle (1).png'
        .profilePage_user_icon_image
          = image_tag 'default-avatar.png'
    .profilePage_user_name
      .profilePage_user_displayName
        = current_user.display_name
      -# - if can? :read, @basic_profile
      .profilePage_user_actionButton
        = link_to 'Edit', edit_basic_profile_path
    .profilePage_user_department
      #{I18n.t("enum.departments.#{current_user.department}")}
  
  .profilePage_title
    %h2 基本データ
    %span 基本データは管理者のみが編集可能な情報です。
  .profilePage_basic
    %h3 基本情報
    %p 氏名
    = current_user.display_name
    %p 誕生日
    = l current_user.birthday, format: :middle
    %p 性別
    #{I18n.t("enum.genders.#{current_user.gender}")}
    %p 所属
    #{I18n.t("enum.departments.#{current_user.department}")}
