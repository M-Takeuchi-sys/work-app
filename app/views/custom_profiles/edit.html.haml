.container
  %ul
    - @custom_profile.errors.full_messages.each do |message|
      %li= message
  .profilePage_user
    .profilePage_user_icon
      .profilePage_user_icon_background
        = image_tag current_user.background_image
  .profilePage_user_edit#avatar_preview
    = image_tag current_user.avatar_image

  = form_with(model: @custom_profile, url: custom_profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :avatar, 'アバター'
    %div
      = f.file_field :avatar, id: 'avatar_file_field'
    %div
      = f.label :avatar, '背景'
    %div
      = f.file_field :background
    %div
      = f.label :nickname, 'ニックネーム'
    %div
      = f.text_field :nickname, class: 'text'
    %div
      = f.label :birthplace, '居住地'
    %div
      = f.text_field :birthplace, class: 'text'
    %div
      = f.label :introduction, '自己紹介'
    %div
      = f.text_field :introduction, class: 'text'

    = f.submit '保存', class: 'btn-primary'

= javascript_pack_tag 'custom_profile'
